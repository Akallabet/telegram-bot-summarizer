{
  "name": "bot-telegram-summarizer",
  "version": "1.0.0",
  "description": "Telegram group chat summarizer bot powered by GitHub Copilot",
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "src/bot.ts",
  "scripts": {
    "start": "node --env-file=.env src/bot.ts",
    "test": "node --test src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "format": "biome check --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,json}": "biome check --write --files-ignore-unknown=true"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.23",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/node": "^25.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "typescript": "^5.9.3"
  }
}
